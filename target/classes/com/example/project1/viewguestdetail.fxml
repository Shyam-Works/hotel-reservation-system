                    <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <Label fx:id="statusLabel" text="[Status]" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                </GridPane>

                <Separator prefWidth="200.0" />

                <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Assigned Room Information" />
                <GridPane hgap="10" vgap="8">
                    <padding>
                        <Insets bottom="10" left="20" right="20" top="5" />
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
