                    <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Label fx:id="lastNameLabel" text="[Last Name]" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <Label fx:id="genderLabel" text="[Gender]" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <Label fx:id="phoneLabel" text="[Phone Number]" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <Label fx:id="emailLabel" text="[Email Address]" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <Label text="Age:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <Label fx:id="ageLabel" text="[Age]" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                    <Label text="Street Name:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
