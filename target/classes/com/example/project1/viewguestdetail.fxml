                    <Label text="Apartment/Suite:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                    <Label fx:id="aptSuiteLabel" text="[Apartment/Suite]" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                    <Label text="City:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
