<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project1.controller.BookingStep1Controller">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Number of Guests" textFill="#1E3A8A">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                </Label>
                <Label text="How many guests will be staying?" textFill="#4B5563">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="numberOfGuestsField" alignment="CENTER" maxWidth="200.0" promptText="e.g., 2">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </TextField>
                <Label text="Please enter a valid number." textFill="#EF4444" visible="false" />
                <AnchorPane VBox.vgrow="ALWAYS">
                    <children>
                        <Button fx:id="backButton" onAction="#handleBack" style="-fx-text-fill: black; -fx-padding: 8 15; -fx-background-radius: 5;" text="Back" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" />
                        <Button fx:id="nextButton" onAction="#handleNextStep" style="-fx-text-fill: black; -fx-padding: 8 15; -fx-background-radius: 5;" text="Next" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0" />
                    </children>
                </AnchorPane>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>